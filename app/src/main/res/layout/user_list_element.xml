<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/userCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/normalMargin"
    android:layout_marginBottom="@dimen/normalMargin"
    app:cardCornerRadius="@dimen/normalMargin"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/halfMargin"
    app:cardPreventCornerOverlap="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comfortaa"
        android:background="@drawable/soft_grass"
        android:orientation="vertical"
        android:layout_margin="@dimen/normalMargin">
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/imageSlider"
            android:layout_marginTop="@dimen/halfMargin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/normalMargin"/>
        <TextView
            android:id="@+id/user_id"
            android:fontFamily="@font/comfortaa"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/halfMargin"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginBottom="@dimen/normalMargin"/>
        <TextView
            android:id="@+id/user_role"
            android:layout_marginLeft="@dimen/halfMargin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginBottom="@dimen/halfMargin"/>
        <TextView
            android:id="@+id/user_email"
            android:fontFamily="@font/comfortaa"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/halfMargin"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginBottom="@dimen/normalMargin"/>
        <TextView
            android:id="@+id/user_password"
            android:layout_marginLeft="@dimen/halfMargin"
            android:layout_marginBottom="@dimen/halfMargin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textAlignment="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/halfMargin">
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>